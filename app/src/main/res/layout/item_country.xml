<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_countries"
        android:layout_margin="@dimen/card_margin"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image_country_flag"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="@dimen/card_image_width"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/text_country_name"
                android:text="@string/app_name"
                android:layout_toEndOf="@id/image_country_flag"
                android:textDirection="ltr"
                android:gravity="left"
                android:padding="@dimen/card_name_padding"
                android:textSize="@dimen/card_name_text_size"
                android:textColor="@color/colorPrimaryText"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/text_country_farsi_name"
                android:text="@string/app_name"
                android:layout_toEndOf="@id/image_country_flag"
                android:layout_below="@id/text_country_name"
                android:textDirection="rtl"
                android:gravity="right"
                android:padding="@dimen/card_name_padding"
                android:textSize="@dimen/card_name_text_size"
                android:textColor="@color/colorPrimaryText"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>